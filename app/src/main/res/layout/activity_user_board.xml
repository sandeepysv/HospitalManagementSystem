<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_user_board"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sandeepysv.hospitalmanagementsystem.UserBoard"
    android:weightSum="1">

    <ImageView
        android:id="@+id/usrboard_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/userboard"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/usr_welcome"
        android:text="Welcome !"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="28sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive" />

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/usr_book_apt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        app:magic_button_size="64dp"
        app:button_icon="@drawable/book"
        app:button_icon_width="40dp"
        app:button_icon_height="40dp"
        app:hide_text="     Book Appointment"
        app:hide_text_size="6dp"
        app:hide_text_color="@android:color/white"
        app:icon_button_color="@android:color/transparent"
        app:expandable_area_color="#a22442" />

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/usr_cancel_apt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        app:magic_button_size="64dp"
        app:button_icon="@drawable/cancel"
        app:button_icon_width="40dp"
        app:button_icon_height="40dp"
        app:hide_text="     Cancel Appointment"
        app:hide_text_size="6dp"
        app:hide_text_color="@android:color/black"
        app:icon_button_color="@android:color/transparent"
        app:expandable_area_color="#e8e8e8" />

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/usr_change_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        app:magic_button_size="64dp"
        app:button_icon="@drawable/change"
        app:button_icon_width="40dp"
        app:button_icon_height="40dp"
        app:hide_text="     Change Password"
        app:hide_text_size="6dp"
        app:hide_text_color="@android:color/white"
        app:icon_button_color="@android:color/transparent"
        app:expandable_area_color="#8d2429" />

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/usr_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        app:magic_button_size="64dp"
        app:button_icon="@drawable/logout"
        app:button_icon_width="40dp"
        app:button_icon_height="40dp"
        app:hide_text="   Logout"
        app:hide_text_size="6dp"
        app:hide_text_color="@android:color/black"
        app:icon_button_color="@android:color/transparent"
        app:expandable_area_color="#fabc3d" />

</LinearLayout>
